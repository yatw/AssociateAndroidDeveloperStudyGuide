<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidTestStudyGuide" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Customize theme
      custom attributes  colorPrimaryVariant and myBtnPadding defined in res/values/attrs.xml
    -->
    <style name="MyOrangeTheme" parent="Theme.AndroidTestStudyGuide">
        <item name="colorPrimary">#FFA500</item>
        <item name="colorPrimaryVariant">#FFFF00</item>
        <item name="colorBtnLight">#FFA500</item>
        <item name="myBtnPadding">20dp</item>
    </style>
</resources>